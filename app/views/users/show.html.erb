<section class="dashboard-main">
	  <h1> <%= current_user.first_name %>'s Dashboard </h1>

	  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
	  <h3>Account Details</h3>
	  <ul>
	    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
	    <li> <%= current_user.email%> </li>
	  </ul>
	  <section>
	    <h1>Bookmarked Segments</h1>
	  </section>

	<% if !facade.repos(1).nil? %>
	  <section class="github_section">
	    <h1>Github Repositories:</h1>
	      <ul>
	      <% facade.repos(5).each do |repo| %>
	        <li><%= link_to repo.name, repo.html_url %></li><br>
	      <% end %>
	      </ul>
				<% if !facade.followers.nil? %>
				<section class="followers_section">
					<h1>Github Followers</h1>
					<ul>
						<% facade.followers.each do |follower|  %>
							<li><%= link_to follower.name, follower.html_url %></li><br>
						<% end %>
					</ul>
				</section>
				<% end %>
				<% if !facade.users_following.nil? %>
				<section class="following_section">
					<h1>Following on Github</h1>
					<ul>
						<% facade.users_following.each do |user| %>
						<li><%= link_to user.name, user.html_url %></li>
						<% end %>
					</ul>
				</section>
				<% end %>
	  </section>
	<% end %>
</section>

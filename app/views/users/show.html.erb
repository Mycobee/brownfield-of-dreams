<section class="dashboard-main">
	  <h1> <%= current_user.first_name %>'s Dashboard </h1>

	  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
	  <h3>Account Details</h3>
	  <ul>
	    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
	    <li> <%= current_user.email%> </li>
	  </ul>
	  <section>
	    <h1>Bookmarked Segments</h1>
	  </section>

	<% if !current_user.token.nil? %>
	  <section class="github_section">
	    <h1>Github Repositories:</h1>
	      <ul>
	      <% facade.repos(5).each do |repo| %>
	        <li><%= link_to repo.name, repo.html_url %></li><br>
	      <% end %>
	      </ul>

	    <h1>Followers:</h1>
	      <ul class="github_followers_section">
	      <% facade.followers(5).each do |github_user| %>
	        <li><%= link_to github_user.login, github_user.html_url %></li><br>
					<% if facade.valid_friend?(github_user.html_url) %>
						<%= button_to "Add to Friends", friendships_path(user_id: current_user.id, friend_html: github_user.html_url) %>
					<% end %>
	      <% end %>
	      </ul>

	    <h1>Following:</h1>
	      <ul class="github_following_section">
	      <% facade.following(5).each do |github_user| %>
	        <li><%= link_to github_user.login, github_user.html_url %></li><br>
					<% if facade.valid_friend?(github_user.html_url) %>
						<%= button_to "Add to Friends", friendships_path(user_id: current_user.id, friend_html: github_user.html_url) %>
					<% end %>
	      <% end %>
	      </ul>
	  </section>
	<% else %>
		<%= link_to '<button type="button">Connect to Github</button>'.html_safe, "/auth/github" %>
	<% end %>
</section>
